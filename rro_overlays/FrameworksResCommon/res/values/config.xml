<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    
    <!-- Preferred max refresh rate at AOD & Ambient Display, if supported by the display. -->
    <integer name="config_defaultRefreshRate">0</integer>
    <integer name="config_aodMaxRefreshRate">60</integer>
    <integer name="config_defaultPeakRefreshRate">120</integer>

    <!-- Battery Health -->
    <bool name="config_supportBatteryHealth">true</bool>
    <string name="config_batteryCalculatedCapacity">/sys/class/power_supply/bms/charge_full</string>
    <string name="config_batteryDesignCapacity">/sys/class/power_supply/bms/charge_full_design</string>
    <string name="config_batteryChargeCycles">/sys/class/power_supply/bms/cycle_count</string>

    <!-- Whether to show a preference item for mobile plan -->
    <bool name="config_show_mobile_plan">true</bool>

    <!-- Whether the device supports Smart Pixels -->
    <bool name="config_supportSmartPixels">true</bool>

    <!-- Whether devices suports in-display fingerprint when screen is off -->
    <integer name="screenOffUdfpsEnabled">1</integer>
    <bool name="config_supportScreenOffUdfps">true</bool>
    
    <!-- Preferred max refresh rate at AOD & Ambient Display, if supported by the display. -->
    <integer name="config_defaultRefreshRate">0</integer>
    <integer name="config_aodMaxRefreshRate">60</integer>
    <integer name="config_defaultPeakRefreshRate">120</integer>
    
    <!-- Whether show refresh rate QS tile -->
    <bool name="config_showRefreshRateQsTile">true</bool>    

</resources>